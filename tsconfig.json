{
	"compilerOptions": {
		"target": "es2016",
		"lib": [
			"ESNext"
		],
		"module": "commonjs",
		"rootDir": "./src",
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"pretty": true,
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"src/**/*.ts"
	]
}